@model CloudWars.Game.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new CloudWars account.</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new {@class="col-lg-2 control-label" })
        <div class="col-lg-10">
            @Html.TextBoxFor(m => m.UserName)
        </div>
    </div>
      <div class="form-group">
        @Html.LabelFor(m => m.Password, new {@class="col-lg-2 control-label" })
        <div class="col-lg-10">
            @Html.PasswordFor(m => m.Password)
        </div>
    </div>
    
      <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new {@class="col-lg-2 control-label" })
        <div class="col-lg-10">
            @Html.PasswordFor(m => m.ConfirmPassword)
        </div>
    </div>
    
    
    
    <div class="form-group mt20">
        <div class="col-lg-offset-2 col-lg-10">
            <input type="submit" value="Register" class="btn btn-info" />
        </div>
    </div>
}

<section class="social" id="socialLoginForm">
    <h2>Use another service to Register.</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
